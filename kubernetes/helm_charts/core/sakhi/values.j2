### Default variable file for sakhi-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}

replicaCount: {{sakhi_replicacount|default(1)}}
repository: {{sakhi_repository|default('sunbird-sakhi-service')}}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{sakhi_cpu_req|default('100m')}}
    memory: {{sakhi_mem_req|default('100Mi')}}
  limits:
    cpu: {{sakhi_cpu_limit|default('1')}}
    memory: {{sakhi_mem_limit|default('1024Mi')}}
network:
  port: 9001
  targetport: 9000
strategy:
  type: RollingUpdate
  maxsurge: {{ sakhi_maxsurge|default('25%') }}
  maxunavailable: {{ sakhi_maxunavailable|default('25%') }}

{{ sakhi_liveness_readiness | to_nice_yaml }}

autoscaling:
  enabled: {{ sakhi_autoscaling_enabled | default('false') }}
  minReplicas: {{ sakhi_autoscaling_minReplicas|default(1) }}
  maxReplicas: {{ sakhi_autoscaling_maxReplicas|default(2) }}
  targetCPUUtilizationPercentage: {{ sakhi_autoscaling_targetCPUUtilizationPercentage|default(60) }}
  targetMemoryUtilizationPercentage: {{ sakhi_autoscaling_targetMemoryUtilizationPercentage|default('') }}
